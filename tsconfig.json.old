 {
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "target": "ES6",         // Version JS cible
    "module": "CommonJS",     // Module utilisé (ex: Node.js)
    "outDir": "dist",         // Dossier de sortie des .js
    "rootDir": "src",         // Dossier des .ts
    "strict": true,           // Active le mode strict
    "sourceMap": true         // Génère des fichiers .map pour le debugging
  }
}
